<!-- permette di impostare un periodo di auto-aggiornamento delle proprietÃ  -->
<configuration scan="true" scanPeriod="120 minutes"> 

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} TEST %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>